<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yourname.advancedcamera">

    <!-- Camera Permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Storage Permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <!-- Audio Permission for Video Recording -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Network Permissions for AI Features -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Wake lock for long processing -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Feature Requirements -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="true" />
    
    <!-- Advanced Camera Features -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.capability.manual_sensor"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.capability.manual_post_processing"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.capability.raw"
        android:required="false" />
    
    <!-- GPU Features for AI Processing -->
    <uses-feature
        android:name="android.hardware.opengles.version"
        android:required="false" 
        android:glEsVersion="0x00030000" />
    
    <!-- TensorFlow Lite GPU Requirements -->
    <uses-feature
        android:name="android.hardware.vulkan"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="false" />

    <application
        android:name=".AdvancedCameraApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="31"
        tools:ignore="GoogleAppIndexingWarning">
        
        <!-- Main Camera Activity -->
        <activity
            android:name=".CameraActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Camera intent filter -->
            <intent-filter>
                <action android:name="android.media.action.IMAGE_CAPTURE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <!-- Video recording intent filter -->
            <intent-filter>
                <action android:name="android.media.action.VIDEO_CAPTURE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Settings Activity (اگر future میں add کریں) -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings_title"
            android:theme="@style/AppTheme" />

        <!-- Gallery Activity (اگر future میں add کریں) -->
        <activity
            android:name=".GalleryActivity"
            android:exported="false"
            android:label="@string/gallery_title"
            android:theme="@style/AppTheme" />

        <!-- File Provider for sharing images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.yourname.advancedcamera.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- WorkManager for background processing -->
        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="com.yourname.advancedcamera.workmanager-init"
            android:exported="false"
            tools:node="remove" />
        
        <!-- AI Model Initialization Service -->
        <service
            android:name=".ai.AIModelService"
            android:enabled="true"
            android:exported="false" />

        <!-- Camera foreground service for video recording -->
        <service
            android:name=".service.CameraForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="camera|mediaProjection" />

    </application>

</manifest>
