<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:id="@+id/main_container">

    <!-- ðŸŽ¥ PRIMARY CAMERA PREVIEW (70% Screen) -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Camera Preview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible" />

    <!-- ðŸ” TOP STATUS BAR -->
    <LinearLayout
        android:id="@+id/top_status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_top_bar"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Title -->
        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¸ DSLR Pro"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- âœ… Status Display -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />

        <!-- âœ… Recording Indicator -->
        <TextView
            android:id="@+id/recording_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”´ REC"
            android:textColor="#FF4444"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginEnd="12dp" />

        <!-- Recording Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/recording_indicator_top"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/recording_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <!-- Battery & Time -->
        <TextView
            android:id="@+id/tv_battery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”‹ 78% â€¢ 14:30"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- âš¡ QUICK SETTINGS FLOATING PANEL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quick_settings_panel"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="#B3000000"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingVertical="8dp">

            <!-- âœ… Mode Switch Button -->
            <Button
                android:id="@+id/btn_mode_switch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/btn_circle"
                android:text="âš™ï¸"
                android:textSize="18sp"
                android:textColor="#4CAF50" />

            <!-- Flash Button with State Indicator -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btn_flash"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_circle"
                    android:text="âš¡"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF" />

                <!-- Flash Mode Badge -->
                <TextView
                    android:id="@+id/badge_flash_mode"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:background="#4CAF50"
                    android:backgroundTint="#4CAF50"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:gravity="center" />
            </FrameLayout>

            <!-- HDR Toggle -->
            <Button
                android:id="@+id/btn_hdr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/btn_circle"
                android:text="HDR"
                android:textSize="12sp"
                android:textColor="#FFFFFF" />

            <!-- Timer Button -->
            <Button
                android:id="@+id/btn_timer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/btn_circle"
                android:text="â±ï¸"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <!-- Grid Lines -->
            <Button
                android:id="@+id/btn_grid"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_circle"
                android:text="â¬œ"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸŽšï¸ MODE SELECTOR WITH VISUAL FEEDBACK -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mode_selector_card"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#B3000000"
        app:cardCornerRadius="32dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/top_status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_modes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabBackground="@drawable/tab_background_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@null"
            app:tabTextColor="#FFFFFF"
            app:tabSelectedTextColor="#4CAF50">

            <!-- Auto Mode with Icon -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTO" />

            <!-- Pro Mode -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO" />

            <!-- Night Mode -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIGHT" />

            <!-- Portrait Mode -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PORTRAIT" />

            <!-- Video Mode -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIDEO" />
        </com.google.android.material.tabs.TabLayout>
    </androidx.cardview.widget.CardView>

    <!-- âœ… CONTROL PANEL -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mode_selector_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="8dp">

        <!-- Control panel content -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ›ï¸ Manual Controls"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- âœ… LUT PANEL -->
    <LinearLayout
        android:id="@+id/lut_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#60000000"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/control_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¨ LUT Settings"
            android:textColor="#9C27B0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- ðŸ“Š FLOATING PRO CONTROLS BUTTON -->
    <Button
        android:id="@+id/fab_expand_controls"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/btn_circle"
        android:text="âš™ï¸"
        android:textSize="20sp"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="@id/texture_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸŽ›ï¸ EXPANDABLE PRO CONTROLS PANEL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pro_controls_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_selector_card">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- LUT Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ LUT:"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp" />

                    <Spinner
                        android:id="@+id/spinner_lut"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle"
                        android:popupBackground="#CC000000" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â„¹ï¸"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Zoom Control with Visual Feedback -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="ðŸ”"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:layout_marginEnd="12dp" />

                        <SeekBar
                            android:id="@+id/seek_zoom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/seekbar_progress_gradient"
                            android:thumb="@drawable/thumb_zoom" />

                        <TextView
                            android:id="@+id/tv_zoom_value"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1.0x"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <!-- Zoom Preset Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="1x"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:background="#20000000" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="2x"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:background="#20000000" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="5x"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:background="#20000000" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="10x"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:background="#20000000" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ISO Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="âš™ï¸"
                        android:textSize="16sp"
                        android:textColor="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <SeekBar
                        android:id="@+id/seek_iso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="1"
                        android:progressDrawable="@drawable/seekbar_progress_gradient"
                        android:thumb="@drawable/thumb_zoom" />

                    <TextView
                        android:id="@+id/tv_iso_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Exposure Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="â±ï¸"
                        android:textSize="16sp"
                        android:textColor="#FF9800"
                        android:layout_marginEnd="12dp" />

                    <SeekBar
                        android:id="@+id/seek_exposure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="6"
                        android:progress="3"
                        android:progressDrawable="@drawable/seekbar_progress_gradient"
                        android:thumb="@drawable/thumb_zoom" />

                    <TextView
                        android:id="@+id/tv_exposure_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF9800"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Focus Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="ðŸŽ¯"
                        android:textSize="16sp"
                        android:textColor="#E91E63"
                        android:layout_marginEnd="12dp" />

                    <SeekBar
                        android:id="@+id/seek_focus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/seekbar_progress_gradient"
                        android:thumb="@drawable/thumb_zoom" />

                    <TextView
                        android:id="@+id/tv_focus_value"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="#E91E63"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginStart="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ“± BOTTOM PRIMARY CONTROLS -->
    <LinearLayout
        android:id="@+id/bottom_controls_container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/bg_controls_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Primary Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="24dp">

            <!-- Gallery -->
            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_circle"
                android:text="ðŸ–¼ï¸"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <!-- Video Record -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp">

                <Button
                    android:id="@+id/btn_video_record"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/btn_video_record"
                    android:text="ðŸŽ¬"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF" />

                <!-- Recording Timer -->
                <TextView
                    android:id="@+id/tv_recording_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="-20dp"
                    android:text="00:00"
                    android:textColor="#FF4444"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Main Capture Button -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Outer Ring -->
                <Button
                    android:id="@+id/btn_capture_outer"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:background="@drawable/btn_capture_dslr"
                    android:text="" />

                <!-- Inner Shutter -->
                <Button
                    android:id="@+id/btn_capture"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_capture_modern"
                    android:text="" />
            </FrameLayout>

            <!-- Switch Camera -->
            <Button
                android:id="@+id/btn_switch_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/btn_circle"
                android:text="ðŸ”„"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <!-- Settings -->
            <Button
                android:id="@+id/btn_settings"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_circle"
                android:text="âš™ï¸"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸŽ¯ FOCUS INDICATOR -->
    <ImageView
        android:id="@+id/focus_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_focus_indicator"
        android:visibility="invisible"
        android:contentDescription="Focus Indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“¸ CAPTURE FEEDBACK OVERLAY -->
    <ImageView
        android:id="@+id/capture_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
