<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ðŸŽ¥ Camera Preview Surface -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ðŸ“Š Top Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#80000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸš€ DSLR Camera Pro - Ready"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recording_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— REC"
            android:textColor="#FF4444"
            android:textSize="12sp"
            android:visibility="gone"
            android:background="#30FF4444"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>

    <!-- ðŸŽ›ï¸ Manual Controls Panel -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#E6000000"
        android:padding="16dp">

        <!-- ðŸ” Zoom Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_zoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tv_zoom_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- âš™ï¸ ISO Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="1"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tv_iso_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- â±ï¸ Exposure Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â±ï¸"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_exposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="6"
                android:progress="3"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tv_exposure_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF9800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- ðŸŽ¯ Focus Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_focus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb" />

            <TextView
                android:id="@+id/tv_focus_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="#E91E63"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- ðŸ“± Bottom Button Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- ðŸ–¼ï¸ Gallery Button -->
            <ImageButton
                android:id="@+id/btn_gallery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle"
                android:src="@android:drawable/ic_menu_gallery"
                android:tint="#FFFFFF"
                android:layout_marginEnd="20dp"
                android:contentDescription="Gallery" />

            <!-- ðŸ”„ Mode Switch Button -->
            <ImageButton
                android:id="@+id/btn_mode_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="#FFFFFF"
                android:layout_marginEnd="20dp"
                android:contentDescription="Switch Mode" />

            <!-- ðŸ“¸ Main Capture Button -->
            <ImageButton
                android:id="@+id/btn_capture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_capture_dslr"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Capture" />

            <!-- ðŸ” Switch Camera Button -->
            <ImageButton
                android:id="@+id/btn_switch_camera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="#FFFFFF"
                android:layout_marginStart="20dp"
                android:contentDescription="Switch Camera" />

            <!-- âš™ï¸ Settings Button -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_circle"
                android:src="@android:drawable/ic_menu_preferences"
                android:tint="#FFFFFF"
                android:layout_marginStart="20dp"
                android:contentDescription="Settings" />

        </LinearLayout>

    </LinearLayout>

    <!-- ðŸŽšï¸ Mode Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_modes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@id/control_panel"
        android:background="#80000000"
        app:tabTextColor="#CCFFFFFF"
        app:tabSelectedTextColor="#4CAF50"
        app:tabIndicatorColor="#4CAF50"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabPaddingStart="16dp"
        app:tabPaddingEnd="16dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTO" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRO" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIGHT" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PORTRAIT" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO" />

    </com.google.android.material.tabs.TabLayout>

    <!-- ðŸŽ¯ Focus Indicator -->
    <ImageView
        android:id="@+id/focus_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/focus_indicator"
        android:visibility="invisible"
        android:contentDescription="Focus Indicator" />

    <!-- ðŸ“Š Feature Indicators (Top Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:background="#40000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/indicator_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§  AI"
            android:textColor="#4CAF50"
            android:textSize="10sp"
            android:background="#404CAF50"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/indicator_hdr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¸ HDR"
            android:textColor="#2196F3"
            android:textSize="10sp"
            android:background="#402196F3"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/indicator_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ RAW"
            android:textColor="#FF9800"
            android:textSize="10sp"
            android:background="#40FF9800"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp" />

    </LinearLayout>

</RelativeLayout>
