<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ðŸŽ¥ Camera Preview -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ðŸ“Š Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#80000000"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DSLR Camera Pro - Ready"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recording_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â— REC"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- ðŸŽ›ï¸ Manual Controls Panel -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="16dp">

        <!-- Zoom Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ” Zoom"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_zoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_zoom_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1x"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Manual Controls Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ ISO"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="6400"
                android:progress="100" />

            <TextView
                android:id="@+id/tv_iso_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Manual Controls Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â±ï¸ Expo"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/seek_exposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="6"
                android:progress="3" />

            <TextView
                android:id="@+id/tv_exposure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Bottom Button Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Gallery Button -->
            <ImageButton
                android:id="@+id/btn_gallery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_marginEnd="16dp"
                android:contentDescription="Gallery" />

            <!-- Mode Switch Button -->
            <ImageButton
                android:id="@+id/btn_mode_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_marginEnd="16dp"
                android:contentDescription="Switch Mode" />

            <!-- Main Capture Button -->
            <ImageButton
                android:id="@+id/btn_capture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_capture_modern"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Capture" />

            <!-- Switch Camera Button -->
            <ImageButton
                android:id="@+id/btn_switch_camera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_marginStart="16dp"
                android:contentDescription="Switch Camera" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_preferences"
                android:layout_marginStart="16dp"
                android:contentDescription="Settings" />

        </LinearLayout>

    </LinearLayout>

    <!-- Mode Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/control_panel"
        android:background="#80000000"
        app:tabTextColor="#FFFFFF"
        app:tabSelectedTextColor="#4CAF50"
        app:tabIndicatorColor="#4CAF50">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTO" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRO" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIGHT" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PORTRAIT" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Focus Indicator -->
    <ImageView
        android:id="@+id/focus_indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/focus_indicator"
        android:visibility="invisible"
        android:contentDescription="Focus" />

</RelativeLayout>
