<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_camera_gradient">

    <!-- Camera Preview -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bar"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/ic_settings_modern"
            android:contentDescription="Settings" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Camera Ready"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/ic_switch_camera_modern"
            android:contentDescription="Switch Camera" />

    </LinearLayout>

    <!-- Mode Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:background="@drawable/bg_top_bar"
        app:tabBackground="@drawable/tab_background_selector"
        app:tabTextColor="#80FFFFFF"
        app:tabSelectedTextColor="#FFFFFF"
        app:tabIndicatorHeight="0dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pro" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Night" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portrait" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Focus Indicator -->
    <ImageView
        android:id="@+id/focus_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_focus_indicator"
        android:visibility="invisible" />

    <!-- Recording Indicator -->
    <TextView
        android:id="@+id/recording_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_recording"
        android:padding="8dp"
        android:text="â— REC"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_controls_panel"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Manual Controls (Pro Mode) -->
        <LinearLayout
            android:id="@+id/manual_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exposure"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seek_exposure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/thumb_seekbar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ISO"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seek_iso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/thumb_seekbar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zoom"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seek_zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/thumb_seekbar" />

        </LinearLayout>

        <!-- Bottom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_gallery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ripple_effect"
                android:src="@drawable/ic_gallery_modern"
                android:contentDescription="Gallery" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Capture Button -->
            <ImageButton
                android:id="@+id/btn_capture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_selector_capture"
                android:scaleType="center"
                android:src="@drawable/btn_capture_modern"
                android:contentDescription="Capture" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_mode_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ripple_effect"
                android:src="@drawable/ic_mode_switch"
                android:contentDescription="Switch Mode" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
