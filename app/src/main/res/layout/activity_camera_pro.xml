<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- MAIN CAMERA PREVIEW -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- TOP OVERLAY BAR -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#66000000"
        android:padding="12dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Halide Pro – Ready"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recording_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● REC"
            android:textColor="#FF4444"
            android:textSize="13sp"
            android:padding="4dp"
            android:background="#33FF4444"
            android:visibility="gone"/>
    </LinearLayout>


    <!-- MODE SELECTOR - iPhone Style -->
    <LinearLayout
        android:id="@+id/mode_selector"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#00000000"
        android:paddingBottom="140dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_modes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorColor="#4CAF50"
            app:tabIndicatorHeight="3dp"
            app:tabTextColor="#66FFFFFF"
            app:tabSelectedTextColor="#4CAF50"
            android:background="#55000000"/>

    </LinearLayout>


    <!-- PRO / MANUAL SLIDERS (Halide Style) -->
    <LinearLayout
        android:id="@+id/manual_panel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#66000000"
        android:padding="12dp"
        android:visibility="visible">

        <!-- ZOOM -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:text="Zoom"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_width="60dp"/>

            <SeekBar
                android:id="@+id/seek_zoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_zoom_value"
                android:layout_width="50dp"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- ISO -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:text="ISO"
                android:textColor="#fff"
                android:layout_width="60dp"/>

            <SeekBar
                android:id="@+id/seek_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_iso_value"
                android:layout_width="50dp"
                android:textColor="#2196F3"
                android:gravity="center"/>
        </LinearLayout>

        <!-- EXPOSURE -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:text="Exp"
                android:textColor="#fff"
                android:layout_width="60dp"/>

            <SeekBar
                android:id="@+id/seek_exposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_exposure_value"
                android:layout_width="50dp"
                android:textColor="#FF9800"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


    <!-- CAMERA BUTTON BAR (Floating – iPhone Style) -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:paddingBottom="16dp"
        android:background="#00000000">

        <ImageButton
            android:id="@+id/btn_gallery"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_circle"
            android:src="@drawable/ic_gallery_modern"/>

        <ImageButton
            android:id="@+id/btn_capture"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/btn_capture_dslr"/>

        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_circle"
            android:src="@drawable/ic_switch_camera_modern"/>
    </LinearLayout>


    <!-- FOCUS TAP INDICATOR -->
    <ImageView
        android:id="@+id/focus_indicator"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_focus_indicator"
        android:visibility="invisible"/>
</FrameLayout>
