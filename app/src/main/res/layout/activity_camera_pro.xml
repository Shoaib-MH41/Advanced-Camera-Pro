<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ðŸŽ¥ PRIMARY CAMERA PREVIEW (70% Screen) -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Camera Preview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ” TOP STATUS BAR -->
    <LinearLayout
        android:id="@+id/top_status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_top_gradient"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Title -->
        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“¸ DSLR Pro"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start" />

        <!-- Recording Indicator with Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/recording_indicator"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/recording_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <!-- Battery & Time -->
        <TextView
            android:id="@+id/tv_battery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”‹ 78% â€¢ 14:30"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- âš¡ QUICK SETTINGS FLOATING PANEL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quick_settings_panel"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="#B3000000"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingVertical="8dp">

            <!-- Flash Button with State Indicator -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_flash"
                    style="@style/IconButtonStyle"
                    android:backgroundTint="@color/flash_auto"
                    app:icon="@drawable/ic_flash_auto_animated"
                    app:iconTint="@android:color/white" />

                <!-- Flash Mode Badge -->
                <TextView
                    android:id="@+id/badge_flash_mode"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/badge_circle_accent"
                    android:text="A"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:gravity="center" />
            </FrameLayout>

            <!-- HDR Toggle -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hdr"
                style="@style/IconButtonStyle"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#20FFFFFF"
                app:icon="@drawable/ic_hdr"
                app:iconTint="@android:color/white" />

            <!-- Timer Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_timer"
                style="@style/IconButtonStyle"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#20FFFFFF"
                app:icon="@drawable/ic_timer"
                app:iconTint="@android:color/white" />

            <!-- Grid Lines -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_grid"
                style="@style/IconButtonStyle"
                android:backgroundTint="#20FFFFFF"
                app:icon="@drawable/ic_grid"
                app:iconTint="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸŽšï¸ MODE SELECTOR WITH VISUAL FEEDBACK -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mode_selector_card"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#B3000000"
        app:cardCornerRadius="32dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/top_status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_modes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabRippleColor="@null"
            app:tabTextColor="@color/tab_text_selector">

            <!-- Auto Mode with Icon -->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mode_auto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AUTO"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.tabs.TabItem>

            <!-- Similar tabs for PRO, NIGHT, PORTRAIT, VIDEO -->
        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ“Š FLOATING PRO CONTROLS BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_expand_controls"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/ic_expand_pro"
        app:backgroundTint="#4CAF50"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@id/texture_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸŽ›ï¸ EXPANDABLE PRO CONTROLS PANEL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pro_controls_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_controls_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_selector_card">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- LUT Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ LUT"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp" />

                    <Spinner
                        android:id="@+id/spinner_lut"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="#CC000000" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginStart="8dp"
                        android:tint="#4CAF50" />
                </LinearLayout>

                <!-- Zoom Control with Visual Feedback -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_zoom_in"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="12dp" />

                        <SeekBar
                            android:id="@+id/seek_zoom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/seekbar_progress_gradient"
                            android:thumb="@drawable/thumb_zoom" />

                        <TextView
                            android:id="@+id/tv_zoom_value"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1.0x"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <!-- Zoom Preset Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="1x"
                            android:textSize="12sp"
                            style="@style/PresetButtonStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="2x"
                            android:textSize="12sp"
                            style="@style/PresetButtonStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:text="5x"
                            android:textSize="12sp"
                            style="@style/PresetButtonStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="10x"
                            android:textSize="12sp"
                            style="@style/PresetButtonStyle" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Similar sections for ISO, Exposure, Focus with modern design -->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ“± BOTTOM PRIMARY CONTROLS -->
    <LinearLayout
        android:id="@+id/bottom_controls_container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gallery Preview Strip -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="8dp"
            android:visibility="gone"
            android:id="@+id/gallery_preview_strip">

            <LinearLayout
                android:id="@+id/gallery_preview_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- Primary Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="24dp">

            <!-- Gallery -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gallery"
                style="@style/CircleButtonStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_gallery_modern"
                app:iconSize="24dp" />

            <!-- Video Record with Pulse Animation -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp">

                <com.airbnb.lottie.LottieAnimationView
             android:id="@+id/recording_indicator"
             android:layout_width="80dp"
             android:layout_height="24dp"
             android:visibility="gone"
             app:lottie_rawRes="@raw/recording_animation"
             app:lottie_autoPlay="true"
             app:lottie_loop="true" />
              
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_video_record"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:backgroundTint="@color/recording_red"
                    app:elevation="10dp"
                    app:fabSize="normal" />

                <!-- Recording Timer -->
                <TextView
                    android:id="@+id/tv_recording_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="-20dp"
                    android:text="00:00"
                    android:textColor="#FF4444"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Main Capture Button with Shutter Animation -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Outer Ring -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_capture_outer"
                    style="@style/CircleButtonStyle"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:backgroundTint="#40FFFFFF" />

                <!-- Inner Shutter -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_capture"
                    style="@style/CircleButtonStyle"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"
                    app:icon="@drawable/ic_shutter"
                    app:iconTint="#000000" />
            </FrameLayout>

            <!-- Switch Camera with Flip Animation -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_switch_camera"
                style="@style/CircleButtonStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                app:icon="@drawable/ic_switch_camera_modern"
                app:iconSize="24dp" />

            <!-- Settings -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_settings"
                style="@style/CircleButtonStyle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                app:icon="@drawable/ic_settings_modern"
                app:iconSize="24dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸŽ¯ FOCUS INDICATOR WITH ANIMATION -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/focus_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        app:lottie_rawRes="@raw/focus_lock_animation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“¸ CAPTURE FEEDBACK OVERLAY -->
    <ImageView
        android:id="@+id/capture_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
