<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:navigationBarColor">@color/color_primary_dark</item>
    </style>

    <!-- Fullscreen theme for camera activity -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Button Styles -->
    <style name="CaptureButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_capture_normal</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Text Styles -->
    <style name="StatusText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ControlLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- SeekBar Styles -->
    <style name="AdvancedSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/thumb_seekbar</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources>

    <!-- Circle Button Style -->
    <style name="CircleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">50dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">#20FFFFFF</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:stateListAnimator">@anim/button_scale</item>
    </style>

    <!-- Icon Button Style -->
    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Preset Button Style -->
    <style name="PresetButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#404CAF50</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
</resources>
