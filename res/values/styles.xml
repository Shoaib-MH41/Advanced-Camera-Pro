<resources>
    <!-- Base application theme. -->
    <style name="Theme.AdvancedCamera" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/accent_gradient_start</item>
        <item name="colorPrimaryVariant">@color/accent_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_purple</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Fullscreen theme for camera activity -->
    <style name="Theme.AdvancedCamera.Fullscreen" parent="Theme.AdvancedCamera">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowOverscan">true</item>
    </style>

    <!-- Button styles -->
    <style name="CaptureButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_capture_modern</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
