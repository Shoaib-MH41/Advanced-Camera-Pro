<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_camera_gradient"
    android:theme="@style/Theme.AdvancedCamera">

    <!-- Camera Preview Surface -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Camera preview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/top_status_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_top_bar"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_settings_modern"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Camera Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/camera_ready"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Switch Camera Button -->
        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_switch_camera_modern"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <!-- Manual Controls Panel -->
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_controls_panel"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Exposure Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/exposure"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_exposure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:max="100"
                android:progress="50"
                android:progressBackgroundTint="@color/white_50"
                android:progressTint="@color/accent_gradient_start"
                android:thumb="@drawable/thumb_seekbar" />

        </LinearLayout>

        <!-- ISO Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/iso"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:max="100"
                android:progress="25"
                android:progressBackgroundTint="@color/white_50"
                android:progressTint="@color/accent_gradient_start"
                android:thumb="@drawable/thumb_seekbar" />

        </LinearLayout>

        <!-- Zoom Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zoom"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_zoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:max="100"
                android:progress="0"
                android:progressBackgroundTint="@color/white_50"
                android:progressTint="@color/accent_gradient_start"
                android:thumb="@drawable/thumb_seekbar" />

        </LinearLayout>

        <!-- Capture Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Gallery Quick Access -->
            <ImageButton
                android:id="@+id/btn_gallery"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_gallery_modern"
                android:tint="@color/white"
                android:layout_marginEnd="40dp"
                tools:ignore="ContentDescription" />

            <!-- Main Capture Button -->
            <ImageButton
                android:id="@+id/btn_capture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_capture_modern"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />

            <!-- Mode Switch Button -->
            <ImageButton
                android:id="@+id/btn_mode_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_mode_switch"
                android:tint="@color/white"
                android:layout_marginStart="40dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Mode Selector -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_modes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black_30"
        app:layout_constraintBottom_toTopOf="@id/control_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/tab_background_selector"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/accent_gradient_start"
        app:tabIndicatorHeight="3dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white_70">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pro" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portrait" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Focus Indicator -->
    <ImageView
        android:id="@+id/focus_indicator"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_focus_indicator"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/texture_view"
        app:layout_constraintEnd_toEndOf="@id/texture_view"
        app:layout_constraintStart_toStartOf="@id/texture_view"
        app:layout_constraintTop_toTopOf="@id/texture_view" />

    <!-- Recording Indicator -->
    <TextView
        android:id="@+id/recording_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_recording"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="@string/recording"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_status_bar"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
